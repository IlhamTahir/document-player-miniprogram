@import "assets/icon.wxss";

.document-player {
  position: relative;
  width: 100%;
  height: 500px;
}

.pages {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

image {
  display: none;
}

image.active {
  display: block;
  width: 100%;
  height: 100%;
}

image.placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -50px;
  margin-top: -50px;
  width: 100px!important;
  height: 100px!important;
}

.toolbar {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px;
  background: #f3f3f3;
  border-top: 1px solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
}

.toolbar view {
  display: flex;
}

.toolbar .iconfont {
  padding: 10px 10px;
  border-radius: 5px;
}

.toolbar .iconfont:hover {
  background: #ddd;
  cursor: pointer;
}

.toolbar .current-page {
  color: #666;
  margin-right: 5px;
  line-height: 35px;
}
