@import "assets/icon.wxss";

.document-player {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.fullscreen {
  position: absolute;
  width: 100%;
  min-height: 100vh;
  z-index: 999;
}


.pages {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

scale-image {
  display: none;
}

.active {
  display: block;
  width: 100%;
  height: 100%;
}


.toolbar {
  height: 50px;
  background: #f3f3f3;
  border-top: 1px solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
}

.toolbar view {
  display: flex;
}

.toolbar .iconfont {
  padding: 10px 10px;
  border-radius: 5px;
}
.toolbar .iconfont:focus {
  background: #ddd;
}
